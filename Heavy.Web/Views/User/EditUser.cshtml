@model UserEditViewModel
@{
    ViewData["Title"] = "EditUser";
}

<h2>EditUser</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Id">
            <span class="invalid" asp-validation-for="Id"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="UserName">
            <span class="invalid" asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Email">
            <span class="invalid" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="IdCardNo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="IdCardNo">
            <span class="invalid" asp-validation-for="IdCardNo"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="BirthDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="BirthDate">
            <span class="invalid" asp-validation-for="BirthDate"></span>
        </div>
    </div>

    <div class="invalid" asp-validation-summary="ModelOnly"></div>

    <button type="submit" class="btn btn-primary">确认修改</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>

