@model RoleEditViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<h2>Edit Role</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Id">
            <span class="invalid" asp-validation-for="Id"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="RoleName">
            <span class="invalid" asp-validation-for="RoleName"></span>
        </div>
    </div>

    <div class="invalid" asp-validation-summary="ModelOnly"></div>

    <button type="submit" class="btn btn-primary">确认修改</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>

<h3>该角色的用户</h3>
<ul>
    @foreach (var user in Model.Users)
    {
        <li>@user</li>
    }
</ul>
<a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn  btn-primary">为角色添加用户</a>
