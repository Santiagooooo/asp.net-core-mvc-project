@model RoleAddViewModel
@{
    ViewData["Title"] = "Add Role";
}
<h2>Add Role</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="RoleName">
            <span class="invalid" asp-validation-for="RoleName"></span>
        </div>
    </div>
    <div class="invalid" asp-validation-summary="ModelOnly"></div>

    <button type="submit" class="btn btn-primary">提交</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>